{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/axios/**"]
      }
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "API_BASE_URL": "http://walab.handong.edu:8080/hisign_1/api",
    "FRONTEND_URL": "https://hisign.vercel.app"
  }
}
